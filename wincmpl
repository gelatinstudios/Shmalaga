#!/bin/bash
echo compiling x86 windows exe...
i686-w64-mingw32-gcc src/* -o "Shmalaga (x86).exe" -Iinclude -std=gnu18 -O2 -Os -mwindows -D__USE_MINGW_ANSI_STDIO -lmingw32 -lm -lSDL2main -lSDL2 -lSDL2_image -lSDL2_mixer -lSDL2_ttf
echo compiling x86_64 exe...
x86_64-w64-mingw32-gcc src/* -o "Shmalaga (x86_64).exe" -Iinclude -std=gnu18 -O2 -Os -mwindows -D__USE_MINGW_ANSI_STDIO -lmingw32 -lm -lSDL2main -lSDL2 -lSDL2_image -lSDL2_mixer -lSDL2_ttf
echo finished!
